<main class="container" id="app">
    <h2>Book Catalogue</h2>

    <table class="table table--bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Year</th>
                <th>Rating</th>
                <th>Language</th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="(book, index) in books" :key="index">
                <td>{{ book.title }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.year }}</td>
                <td>{{ book.rating }}</td>
                <td>{{ book.language }}</td>
            </tr>
        </tbody>
    </table>
</main>
