<main class="container" id="app">
    <h2>Book Catalogue</h2>

    <div class="filters">
        <h3 class="filters__header">Filter By</h3>
        <div>
            <label>
                Rating:
                <select v-on:change="filterRating">
                    <option value="all">All</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </label>
        </div>
    </div>

    <table class="table table--bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th class="table__row--hide-mobile">Author</th>
                <th class="table__row--hide-mobile">Category</th>
                <th class="table__header--sortable" v-on:click="sort('year')">Year {{ sortDesc ? 'ðŸ”½' : 'ðŸ”¼' }}</th>
                <th class="table__row--hide-mobile">Rating</th>
            </tr>
        </thead>
        <tbody>
            <tr
                v-for="(book, index) in sortedBooks" :key="index"
                v-bind:class="{ 'table__row--highlight': book.year >= 1950 }"
                >
                <td>{{ book.title }}</td>
                <td class="table__row--hide-mobile">{{ book.author }}</td>
                <td class="table__row--hide-mobile">{{ book.category }}</td>
                <td>{{ book.year }}</td>
                <td class="table__row--hide-mobile">{{ book.rating }}</td>
            </tr>
        </tbody>
    </table>
</main>
